function virtualenv_info {
    [ $VIRTUAL_ENV ] && echo '%{%F{blue}%}ðŸ '${VIRTUAL_ENV:t}'%{%f%} '
}

function exit_status_info {
    local estatus=$?
    if [[ $estatus -ne 0 ]]; then
        echo '%{%F{red}%}<'${estatus}'>%{%f%} '
    fi
}

eval "$(direnv hook zsh)"

